<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/FeedbackFragmentStyle">

        <ImageView
            android:id="@+id/emoticonImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/feedbackTitleMarginTop"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_negative_feedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/feedbackNegativeMainReasonPageTitle"
            android:textAlignment="center"
            android:textColor="@color/almostBlackDark"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emoticonImage" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="@string/feedbackNegativeMainReasonPageSubtitle"
            android:textAlignment="center"
            android:textColor="@color/almostBlack"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintWidth_percent="0.66" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteSix" />

            <TextView
                android:id="@+id/optionMissingFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteFive"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:text="@string/missingBrowserFeaturesTitleLong"
                android:textColor="@color/greyishBrownTwo"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_marginStart="22dp"
                android:layout_height="1dp"
                android:background="@color/whiteSix" />

            <TextView
                android:id="@+id/optionWebsitesNotLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteFive"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/websiteNotLoadingTitleLong"
                android:textColor="@color/greyishBrownTwo"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="22dp"
                android:background="@color/whiteSix" />

            <TextView
                android:id="@+id/optionSearchNotGoodEnough"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteFive"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/searchNotGoodEnoughTitleLong"
                android:textColor="@color/greyishBrownTwo"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="22dp"
                android:background="@color/whiteSix" />

            <TextView
                android:id="@+id/optionNotEnoughCustomizationOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteFive"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/needMoreCustomizationTitleLong"
                android:textColor="@color/greyishBrownTwo"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="22dp"
                android:background="@color/whiteSix" />

            <TextView
                android:id="@+id/optionAppIsSlowOrBuggy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteFive"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/appIsSlowOrBuggyTitleLong"
                android:textColor="@color/greyishBrownTwo"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="22dp"
                android:background="@color/whiteSix" />

            <TextView
                android:id="@+id/optionNoneOfThese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteFive"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/otherMainReasonTitleLong"
                android:textColor="@color/greyishBrownTwo"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/whiteSix" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>